{
  "name": "@lerna-monorepo/kafka-mongo",
  "version": "1.0.1",
  "description": "Backend typescript express relay mongodb",
  "scripts": {
    "start": "tsx watch ./src/index.ts",
    "build": "npx tsc || ../../node_modules/typescript/bin/tsc",
    "lint": "npx tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0 || ../../node_modules/typescript/bin/tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "serve": "node ./build/index.js",
    "pcm": "lint-staged",
    "test": "jest --bail"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "date-fns": "^4.1.0",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-relay": "^0.10.0",
    "graphql-subscriptions": "^2.0.0",
    "ioredis": "^5.2.4",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.2.0",
    "testcontainers": "^10.5.0",
    "@lerna-monorepo/backend-utilities": "workspace:*"
  },
  "devDependencies": {
    "tsx": "^4.19.1",
    "@sinonjs/fake-timers": "^13.0.1",
    "@testcontainers/kafka": "^10.5.0",
    "@types/jest": "^29.0.0",
    "@types/supertest": "^6.0.1",
    "eslint": "^9.9.1",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "supertest": "^7.0.0",
    "typescript": "^5.5.4",
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-8-config": "workspace:*",
    "@repo/jest-presets": "workspace:*"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail --passWithNoTests"
    ]
  }
}
