{
  "name": "@repo/utils",
  "version": "1.0.1",
  "description": "Backend typescript express relay mongodb",
  "exports": {
    "./config": {
      "types": "./src/config.ts",
      "default": "./build/config.js"
    },
    "./index": {
      "types": "./src/index.ts",
      "default": "./build/index.js"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./build/types.js"
    }
  },
  "scripts": {
    "postinstall": "pnpm build",
    "build": "tsc || ./node_modules/typescript/bin/tsc",
    "pcm": "lint-staged",
    "test": "jest --bail",
    "lint": "(tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0) || (./node_modules/typescript/bin/tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0)"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "typescript": "^5.5.4",
    "@repo/typescript-config": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "eslint": "^9.9.1",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "@types/node": "^22.7.4",
    "@repo/eslint-8-config": "workspace:*",
    "@repo/jest-presets": "workspace:*"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail --passWithNoTests"
    ]
  }
}
