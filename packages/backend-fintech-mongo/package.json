{
  "name": "@lerna-monorepo/backend-fintech-mongo",
  "version": "1.0.1",
  "description": "Backend typescript express relay mongodb",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node-dev --transpile-only ./src/index.ts",
    "populate": "npx tsc && node ./build/populate.js",
    "build": "npx tsc",
    "serve": "node ./build/index.js",
    "pcm": "lint-staged",
    "test": "jest --bail",
    "proto": "sh src/proto/build.sh"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.8.14",
    "backend-auth": "*",
    "date-fns": "^3.0.6",
    "graphql": "^16.5.0",
    "graphql-redis-subscriptions": "^2.6.1",
    "graphql-relay": "^0.10.0",
    "graphql-sse": "^2.5.3",
    "graphql-subscriptions": "^2.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.0",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.2.0",
    "node-cron": "^3.0.3",
    "testcontainers": "^10.10.4"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@shelf/jest-mongodb": "^4.2.0",
    "@testcontainers/kafka": "^10.10.4",
    "@testcontainers/redis": "^10.10.4",
    "@types/google-protobuf": "^3.15.6",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "babel-jest": "^29.0.0",
    "eslint": "^9.7.0",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "grpc-tools": "^1.12.4",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail --passWithNoTests"
    ]
  }
}
