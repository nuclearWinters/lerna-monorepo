{
  "name": "@repo/backend-fintech-mongo",
  "version": "1.0.1",
  "description": "Backend typescript express relay mongodb",
  "type": "module",
  "scripts": {
    "start": "tsx watch ./src/index.ts",
    "populate": "tsx ./src/populate.ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0 || ./node_modules/typescript/bin/tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "serve": "tsx ./src/index.ts",
    "pcm": "lint-staged",
    "test": "jest --bail --detectOpenHandles"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "@repo/mongo-utils": "workspace:*",
    "@repo/kafka-utils": "workspace:*",
    "@grpc/grpc-js": "^1.12.2",
    "@repo/graphql-utils": "workspace:*",
    "@repo/grpc-utils": "workspace:*",
    "@repo/jwt-utils": "workspace:*",
    "@repo/redis-utils": "workspace:*",
    "@repo/utils": "workspace:*",
    "cookie": "^1.0.1",
    "date-fns": "^4.1.0",
    "graphql": "^16.9.0",
    "graphql-redis-subscriptions": "^2.6.1",
    "graphql-relay": "^0.10.2",
    "graphql-subscriptions": "^2.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.10.0",
    "tsx" :"^4.19.2"
  },
  "devDependencies": {
    "@repo/eslint-8-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@shelf/jest-mongodb": "^4.3.2",
    "@testcontainers/kafka": "^10.13.2",
    "@testcontainers/redis": "^10.13.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "redis": "^4.7.0",
    "supertest": "^7.0.0",
    "testcontainers": "^10.13.2",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail --passWithNoTests"
    ]
  }
}
