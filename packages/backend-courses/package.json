{
  "name": "backend-courses",
  "version": "1.0.1",
  "description": "Backend typescript express relay mongodb",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node-dev --transpile-only ./src/index.ts",
    "populate": "npx tsc && node ./build/populate.js",
    "build": "npx tsc",
    "serve": "node ./build/index.js",
    "pcm": "lint-staged",
    "test": "jest --bail",
    "proto": "sh src/proto/build.sh"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.6.9",
    "amqplib": "^0.10.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron": "^2.1.0",
    "date-fns": "^2.29.1",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "graphql-helix": "^1.13.0",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-relay": "^0.10.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.10.1",
    "ioredis": "^5.2.4",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^4.8.1",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@shelf/jest-mongodb": "^4.0.0",
    "@types/amqplib": "^0.10.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.10",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.11",
    "@types/google-protobuf": "^3.15.6",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "babel-jest": "^29.0.0",
    "eslint": "^8.21.0",
    "grpc_tools_node_protoc_ts": "^5.2.2",
    "grpc-tools": "^1.11.1",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail"
    ]
  }
}
