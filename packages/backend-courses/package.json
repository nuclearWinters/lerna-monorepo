{
  "name": "backend-courses",
  "version": "1.0.1",
  "description": "Backend typescript express relay mongodb",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node-dev --transpile-only ./src/index.ts",
    "populate": "npx tsc && node ./build/populate.js",
    "build": "npx tsc",
    "serve": "node ./build/index.js",
    "pcm": "lint-staged",
    "test": "jest --bail",
    "proto": "sh src/proto/build.sh"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.3.2",
    "amqplib": "^0.8.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "date-fns": "^2.21.3",
    "dotenv": "^14.3.2",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^16.3.0",
    "graphql-relay": "^0.10.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.1.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.3.1",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@shelf/jest-mongodb": "^2.2.0",
    "@types/amqplib": "^0.8.0",
    "@types/cors": "^2.8.10",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.11",
    "@types/google-protobuf": "^3.15.2",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-jest": "^27.0.2",
    "eslint": "^8.8.0",
    "grpc_tools_node_protoc_ts": "^5.2.2",
    "grpc-tools": "^1.11.1",
    "jest": "^27.0.4",
    "lint-staged": "^12.3.2",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail"
    ]
  }
}
