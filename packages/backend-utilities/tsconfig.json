{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": ["**/*.test.ts"]
}
