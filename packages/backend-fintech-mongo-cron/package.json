{
  "name": "@repo/backend-fintech-mongo-cron",
  "version": "1.0.1",
  "description": "Cron jobs module for backend-fintech-mongo",
  "type": "module",
  "scripts": {
    "start": "tsx watch ./src/index.ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0 || ./node_modules/typescript/bin/tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "serve": "./node_modules/tsx/dist/cli.mjs \"./src/index.ts\"",
    "pcm": "lint-staged",
    "test": "jest --bail"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "@repo/mongo-utils": "workspace:*",
    "@repo/utils": "workspace:*",
    "date-fns": "^4.1.0",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.10.0",
    "node-cron": "^3.0.3",
    "tsx" :"^4.19.2"
  },
  "devDependencies": {
    "@repo/eslint-8-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testcontainers/kafka": "^10.13.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "testcontainers": "^10.13.2",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail --passWithNoTests"
    ]
  }
}
