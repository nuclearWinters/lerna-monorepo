{
  "name": "@lerna-monorepo/backend-fintech-mongo-cron",
  "version": "1.0.1",
  "description": "Cron jobs module for backend-fintech-mongo",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "ts-node-dev --transpile-only ./src/index.ts",
    "populate": "npx tsc && node ./build/populate.js",
    "build": "npx tsc",
    "serve": "node ./build/index.js",
    "pcm": "lint-staged",
    "test": "jest --bail --detectOpenHandles"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "date-fns": "^3.0.6",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.2.0",
    "node-cron": "^3.0.3",
    "@lerna-monorepo/backend-utilities": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@eslint/js": "^9.9.1",
    "@shelf/jest-mongodb": "^4.2.0",
    "@testcontainers/kafka": "^10.11.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.0.0",
    "@types/node-cron": "^3.0.11",
    "babel-jest": "^29.0.0",
    "eslint": "^9.9.1",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "testcontainers": "^10.11.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail --passWithNoTests"
    ]
  }
}
