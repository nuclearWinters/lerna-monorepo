{
  "name": "@repo/grpc-fintech-node",
  "version": "1.0.1",
  "description": "Backend typescript express relay mongodb",
  "scripts": {
    "start": "tsx watch ./src/index.ts",
    "build": "tsc || ./node_modules/typescript/bin/tsc",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0 || ./node_modules/typescript/bin/tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "serve": "node ./build/index.js",
    "pcm": "lint-staged",
    "test": "jest --bail"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.12.2",
    "@repo/grpc-utils": "workspace:*",
    "@repo/utils": "workspace:*",
    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.10.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@repo/eslint-8-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testcontainers/redis": "^10.13.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
