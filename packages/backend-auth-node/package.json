{
  "name": "@repo/backend-auth-node",
  "version": "1.0.1",
  "description": "Backend typescript express relay mongodb",
  "scripts": {
    "start": "tsx watch ./src/index.ts",
    "populate": "tsx ./src/populate.ts",
    "build": "tsc || ./node_modules/typescript/bin/tsc",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0 || ./node_modules/typescript/bin/tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "serve": "node ./build/index.js",
    "pcm": "lint-staged",
    "test": "jest --bail"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "author": "Armando Rueda",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.12.2",
    "@repo/graphql-utils": "workspace:*",
    "@repo/grpc-utils": "workspace:*",
    "@repo/jwt-utils": "workspace:*",
    "@repo/logs-utils": "workspace:*",
    "@repo/redis-utils": "workspace:*",
    "@repo/utils": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cookie": "^1.0.1",
    "date-fns": "^4.1.0",
    "graphql": "^16.9.0",
    "graphql-relay": "^0.10.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.10.0",
    "redis": "^4.7.0",
    "woothee": "1.11.1"
  },
  "devDependencies": {
    "@repo/eslint-8-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testcontainers/redis": "^10.13.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.6",
    "@types/supertest": "^6.0.2",
    "@types/woothee": "^1.11.3",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "@shelf/jest-mongodb": "^4.3.2"
  },
  "lint-staged": {
    "**/!(*_pb).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --findRelatedTests --bail --passWithNoTests"
    ]
  }
}
